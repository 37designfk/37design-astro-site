---
// Dify AI Chat Widget
// DifyのURLは環境に応じて変更してください
const DIFY_URL = "https://dify.37d.jp"; // あなたのDifyインスタンスURL
const DIFY_TOKEN = "app-XXXXX"; // Difyで生成されるトークン
---

<!-- Dify AI Chat Widget -->
<script is:inline define:vars={{ DIFY_URL, DIFY_TOKEN }}>
  window.difyChatbotConfig = {
    token: DIFY_TOKEN,
    baseUrl: DIFY_URL,
  }
</script>
<script
  is:inline
  src="https://unpkg.com/@langgenius/dify-chatbot-bubble-button/dist/embed.min.js"
  defer
></script>
<style is:global>
  /* Difyウィジェットのカスタマイズ */
  #dify-chatbot-bubble-button {
    --dify-chatbot-bubble-button-bg-color: #f5d020 !important; /* 37Designイエロー */
    --dify-chatbot-bubble-button-color: #0a0f1e !important;
  }
</style>
