---
interface Props {
  color1?: string;
  color2?: string;
}

const { color1 = '#f8f9fb', color2 = '#dce4f0' } = Astro.props;
---

<div class="wave-container">
  <svg viewBox="0 0 1440 120" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
    <!-- 第2の波（奥・色違い・速い） -->
    <path fill={color2} opacity="0.6">
      <animate
        attributeName="d"
        dur="7s"
        repeatCount="indefinite"
        values="
          M0,50 C160,80 320,20 480,50 C640,80 800,20 960,50 C1120,80 1280,20 1440,50 L1440,120 L0,120 Z;
          M0,50 C160,20 320,80 480,50 C640,20 800,80 960,50 C1120,20 1280,80 1440,50 L1440,120 L0,120 Z;
          M0,50 C160,80 320,20 480,50 C640,80 800,20 960,50 C1120,80 1280,20 1440,50 L1440,120 L0,120 Z"
      />
    </path>
    <!-- 第1の波（手前・メイン色・ゆっくり） -->
    <path fill={color1}>
      <animate
        attributeName="d"
        dur="12s"
        repeatCount="indefinite"
        values="
          M0,70 C240,100 480,40 720,70 C960,100 1200,40 1440,70 L1440,120 L0,120 Z;
          M0,70 C240,40 480,100 720,70 C960,40 1200,100 1440,70 L1440,120 L0,120 Z;
          M0,70 C240,100 480,40 720,70 C960,100 1200,40 1440,70 L1440,120 L0,120 Z"
      />
    </path>
  </svg>
</div>

<style>
  .wave-container {
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    z-index: 5;
  }
  .wave-container svg {
    display: block;
    width: 100%;
    height: 80px;
  }
</style>
