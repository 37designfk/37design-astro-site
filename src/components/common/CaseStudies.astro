---
import type { CaseStudy } from "../../data/types";

interface Props {
  caseStudies: CaseStudy[];
  label?: string;
  title?: string;
  bgClass?: string;
}

const {
  caseStudies,
  label = "Case Studies",
  title = "導入事例",
  bgClass = "bg-surface-alt",
} = Astro.props;
---

<section class={`py-16 md:py-20 ${bgClass}`}>
  <div class="max-w-5xl mx-auto px-4 md:px-6 lg:px-8">
    <div class="text-center mb-12">
      <p class="text-amber-600 text-sm font-semibold tracking-[.2em] uppercase mb-3">{label}</p>
      <h2 class="text-2xl md:text-3xl font-bold text-text-primary">{title}</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {caseStudies.map((cs) => (
        <div class="bg-white rounded-xl border border-border overflow-hidden hover:border-amber-300/50 hover:shadow-lg transition-all duration-300">
          <div class={`h-1 bg-gradient-to-r ${cs.gradientClass}`}></div>
          <div class="p-6">
            <div class="flex items-center gap-2.5 mb-4">
              <div class={`w-9 h-9 rounded-lg ${cs.iconBgClass} ${cs.iconTextClass} flex items-center justify-center shrink-0`}>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d={cs.iconPath} />
                </svg>
              </div>
              <div>
                <span class={`inline-flex items-center px-2 py-0.5 rounded text-[10px] font-bold text-white bg-gradient-to-r ${cs.gradientClass}`}>{cs.industry}</span>
                <p class="text-xs text-text-muted mt-0.5">{cs.employeeCount}</p>
              </div>
            </div>

            <div class="text-xs text-text-body space-y-1.5 mb-4">
              <p><span class="text-red-400 font-bold mr-1">課題</span>{cs.problem}</p>
              <p><span class="text-blue-500 font-bold mr-1">施策</span>{cs.solution}</p>
            </div>

            <div class="space-y-2 mb-4">
              {cs.metrics.map((m) => (
                <div>
                  <div class="flex items-center justify-between text-[11px] mb-0.5">
                    <span class="text-text-muted">{m.label}</span>
                    <span class="font-bold text-accent-600">{m.value}</span>
                  </div>
                  <div class="h-1 bg-neutral-100 rounded-full overflow-hidden">
                    <div class="h-full bg-gradient-to-r from-amber-400 to-amber-500 rounded-full" style={`width: ${m.width}`}></div>
                  </div>
                </div>
              ))}
            </div>

            <div class="flex items-start gap-2 p-2.5 bg-surface-alt rounded-lg">
              <svg class="w-4 h-4 text-amber-500 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M4.583 17.321C3.553 16.227 3 15 3 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 0 1-3.5 3.5 3.871 3.871 0 0 1-2.748-1.179Zm10 0C13.553 16.227 13 15 13 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 0 1-3.5 3.5 3.871 3.871 0 0 1-2.748-1.179Z" />
              </svg>
              <div>
                <p class="text-[11px] text-text-body italic leading-snug">{cs.quote}</p>
                <p class="text-[10px] text-text-muted mt-0.5">{cs.quoteAuthor}</p>
              </div>
            </div>

            <div class="mt-3">
              <span class="inline-flex items-center px-2.5 py-1 rounded-full text-[10px] font-semibold bg-amber-50 text-amber-700 border border-amber-200">{cs.planBadge}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
