---
import WaveDivider from "./WaveDivider.astro";

const cases = [
  {
    industry: "製造業",
    company: "金属加工メーカー（従業員30名）",
    problem: "受発注・在庫管理をExcelで手作業。月40時間の残業が常態化していた",
    solution: "受発注の自動化 + 在庫管理ダッシュボード構築",
    results: [
      { label: "残業時間", before: "月40時間", after: "月8時間", highlight: "80%削減", percent: 80 },
      { label: "発注ミス", before: "月5件", after: "月0件", highlight: "ゼロに", percent: 100 },
    ],
    quote: "まさかここまで変わるとは。もっと早くお願いすればよかった",
    name: "A社 製造部長",
    avatar: "A",
    imageLabel: "ダッシュボード画面",
    gradient: "from-blue-600 to-blue-800",
  },
  {
    industry: "不動産業",
    company: "賃貸管理会社（従業員15名）",
    problem: "顧客情報がスタッフ個人のスマホに散在。引き継ぎのたびに顧客を失っていた",
    solution: "CRM導入 + 自動フォローアップメール設定",
    results: [
      { label: "追客率", before: "30%", after: "85%", highlight: "2.8倍", percent: 85 },
      { label: "成約率", before: "8%", after: "15%", highlight: "1.9倍", percent: 75 },
    ],
    quote: "営業が仕組みになった。個人のがんばりに頼らなくてよくなった",
    name: "B社 代表取締役",
    avatar: "B",
    imageLabel: "CRM管理画面",
    gradient: "from-violet-600 to-purple-800",
  },
  {
    industry: "士業",
    company: "税理士事務所（従業員8名）",
    problem: "毎月の請求書作成・送付に丸2日かかっていた。繁忙期はミスも頻発",
    solution: "請求書自動生成 + AIによる入力チェック",
    results: [
      { label: "作業時間", before: "16時間/月", after: "30分/月", highlight: "97%削減", percent: 97 },
      { label: "入力ミス", before: "月3件", after: "月0件", highlight: "ゼロに", percent: 100 },
    ],
    quote: "2日かかっていた作業が30分。スタッフが本業に集中できるようになった",
    name: "C事務所 所長",
    avatar: "C",
    imageLabel: "自動化フロー図",
    gradient: "from-emerald-600 to-teal-800",
  },
  {
    industry: "AI開発",
    company: "複数業種向けAIシステム開発",
    problem: "診断・鑑定・書類判別など、専門知識が必要な業務に時間とコストがかかっていた",
    solution: "ChatGPT API連動のAI診断システム・AI占いシステム・OCR判別システムを構築",
    results: [
      { label: "診断・鑑定", before: "専門家が対応", after: "AIが即時回答", highlight: "即時化", percent: 95 },
      { label: "結果確認", before: "紙・メール", after: "Webで即閲覧", highlight: "Web化", percent: 90 },
    ],
    quote: "専門的な判断をAIが代行してくれるので、24時間対応が可能になった",
    name: "D社 事業責任者",
    avatar: "D",
    imageLabel: "AI診断画面",
    gradient: "from-amber-500 to-orange-700",
  },
  {
    industry: "事務代行",
    company: "事務代行サービス会社",
    problem: "業務マニュアルの確認・質問対応に社長自らが時間を取られていた",
    solution: "社内マニュアルをAIが学習したチャットボットを構築。スタッフが自分で確認可能に",
    results: [
      { label: "社長の対応時間", before: "1日2時間", after: "ほぼゼロ", highlight: "95%削減", percent: 95 },
      { label: "回答スピード", before: "数時間待ち", after: "即時回答", highlight: "即時化", percent: 98 },
    ],
    quote: "スタッフからの質問対応がゼロに。自分の仕事に集中できるようになった",
    name: "E社 代表取締役",
    avatar: "E",
    imageLabel: "チャットボット画面",
    gradient: "from-cyan-500 to-blue-700",
  },
];
---

<section id="cases" class="relative py-16 md:py-20 lg:py-24 bg-white">
  <div class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8">
    <div class="text-center mb-12 md:mb-16 animate-on-scroll">
      <p class="text-primary-500 text-sm font-semibold tracking-[.2em] uppercase mb-3">Case Studies</p>
      <h2 class="text-2xl md:text-3xl font-bold text-text-primary">
        導入事例<span class="marker-highlight"> ── こう変わりました</span>
      </h2>
    </div>

    <div class="flex flex-col gap-10 md:gap-12">
      {cases.map((c, i) => (
        <div
          class="animate-on-scroll rounded-2xl border border-border overflow-hidden card-hover"
          data-anim={i % 2 === 0 ? "left" : "right"}
          style={`animation-delay: ${i * 0.1}s`}
        >
          <div class={`h-1.5 bg-gradient-to-r ${c.gradient}`}></div>
          <div class="p-6 md:p-8">
            <div class="flex items-center gap-3 mb-4">
              <span class={`inline-flex items-center px-3 py-1 rounded-full text-xs font-bold text-white bg-gradient-to-r ${c.gradient}`}>
                {c.industry}
              </span>
              <p class="text-sm font-medium text-text-secondary">{c.company}</p>
            </div>

              <!-- Problem -->
              <div class="mb-5">
                <div class="flex items-center gap-2 mb-2">
                  <span class="w-5 h-5 rounded-full bg-red-100 text-red-500 flex items-center justify-center text-[10px] font-bold shrink-0">!</span>
                  <h4 class="text-xs font-bold text-text-muted uppercase tracking-wider">課題</h4>
                </div>
                <p class="text-sm text-text-body leading-relaxed ml-7">{c.problem}</p>
              </div>

              <!-- Solution -->
              <div class="mb-5">
                <div class="flex items-center gap-2 mb-2">
                  <span class="w-5 h-5 rounded-full bg-blue-100 text-link flex items-center justify-center shrink-0">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17 17.25 21A2.652 2.652 0 0 0 21 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 1 1-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 0 0 4.486-6.336l-3.276 3.277a3.004 3.004 0 0 1-2.25-2.25l3.276-3.276a4.5 4.5 0 0 0-6.336 4.486c.049.58.025 1.193-.14 1.743" />
                    </svg>
                  </span>
                  <h4 class="text-xs font-bold text-text-muted uppercase tracking-wider">導入内容</h4>
                </div>
                <p class="text-sm text-text-body leading-relaxed ml-7">{c.solution}</p>
              </div>

              <!-- Results with progress bars -->
              <div class="mb-5">
                <div class="flex items-center gap-2 mb-3">
                  <span class="w-5 h-5 rounded-full bg-green-100 text-green-600 flex items-center justify-center shrink-0">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25" />
                    </svg>
                  </span>
                  <h4 class="text-xs font-bold text-text-muted uppercase tracking-wider">成果</h4>
                </div>
                <div class="space-y-3 ml-7">
                  {c.results.map((r) => (
                    <div>
                      <div class="flex items-center justify-between mb-1">
                        <span class="text-xs text-text-secondary">{r.label}</span>
                        <span class="text-xs font-bold text-accent-600 bg-accent-400/20 px-2 py-0.5 rounded-full">{r.highlight}</span>
                      </div>
                      <div class="flex items-center gap-3">
                        <span class="text-xs text-text-muted line-through w-16 shrink-0">{r.before}</span>
                        <div class="flex-1 h-2 bg-surface-dark rounded-full overflow-hidden">
                          <div
                            class="h-full bg-gradient-to-r from-accent-400 to-accent-500 rounded-full transition-all duration-1000"
                            style={`width: ${r.percent}%`}
                          ></div>
                        </div>
                        <span class="text-xs font-bold text-text-primary w-16 shrink-0 text-right">{r.after}</span>
                      </div>
                    </div>
                  ))}
                </div>
              </div>

              <!-- Quote with avatar -->
              <div class="flex items-start gap-3 ml-7 p-4 bg-surface-alt rounded-xl">
                <div class="w-10 h-10 rounded-full bg-primary-950 text-white flex items-center justify-center text-sm font-bold shrink-0">
                  {c.avatar}
                </div>
                <div>
                  <p class="text-sm text-text-body italic leading-relaxed">「{c.quote}」</p>
                  <p class="text-xs text-text-muted mt-1 font-medium">{c.name}</p>
                </div>
              </div>
          </div>
        </div>
      ))}
    </div>
  </div>
  <WaveDivider color1="#f8f9fb" />
</section>
