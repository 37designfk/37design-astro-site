---
interface SocialLink {
  label: string;
  href: string;
  icon: string;
}

interface Props {
  name?: string;
  role?: string;
  bio?: string;
  image?: string;
  socialLinks?: SocialLink[];
}

const {
  name = '古田 健',
  role = '株式会社37Design 代表取締役',
  bio = '業務自動化・AI導入支援・営業管理最適化を通じて、中小企業のDX推進をサポート。300以上のWebサイト運用実績を持ち、テクノロジーで属人化した業務を解決する神戸のDXパートナー。',
  image = '/images/ceo-photo.jpg',
  socialLinks = [],
} = Astro.props;
---

<aside class="mt-12 p-6 md:p-8 rounded-2xl bg-surface-alt border border-border">
  <div class="flex flex-col sm:flex-row gap-5">
    <!-- Photo -->
    <div class="shrink-0">
      {image ? (
        <img
          src={image}
          alt={name}
          loading="lazy"
          decoding="async"
          class="w-20 h-20 rounded-full object-cover border-2 border-border"
        />
      ) : (
        <div class="w-20 h-20 rounded-full bg-primary-100 flex items-center justify-center text-primary-700 font-bold text-2xl">
          {name.charAt(0)}
        </div>
      )}
    </div>

    <!-- Info -->
    <div class="flex-1 min-w-0">
      <p class="text-xs font-semibold text-text-muted uppercase tracking-wider mb-1">この記事の著者</p>
      <p class="text-lg font-bold text-text-primary">{name}</p>
      <p class="text-sm text-text-secondary mb-3">{role}</p>
      <p class="text-sm text-text-body leading-relaxed">{bio}</p>

      {socialLinks.length > 0 && (
        <div class="flex items-center gap-3 mt-4">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-text-muted hover:text-text-primary transition-colors"
              aria-label={link.label}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d={link.icon} />
              </svg>
            </a>
          ))}
        </div>
      )}
    </div>
  </div>
</aside>
