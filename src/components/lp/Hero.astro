---
interface Props {
  headline: string;
  subheadline: string;
  ctaText: string;
  ctaLink: string;
  backgroundImage?: string;
}

const { headline, subheadline, ctaText, ctaLink, backgroundImage } = Astro.props;
---

<section data-testid="lp-hero" class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
  {backgroundImage ? (
    <div class="absolute inset-0">
      <img
        src={backgroundImage}
        alt=""
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-primary-950/80 via-primary-950/60 to-primary-950/90"></div>
    </div>
  ) : (
    <div class="absolute inset-0 hero-gradient"></div>
  )}

  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-glow/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/3 right-1/4 w-48 h-48 bg-accent-500/8 rounded-full blur-3xl"></div>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center py-20">
    <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white leading-tight mb-6">
      {headline}
    </h1>
    <p class="text-lg sm:text-xl md:text-2xl text-primary-200 max-w-3xl mx-auto mb-10 leading-relaxed">
      {subheadline}
    </p>
    <a
      href={ctaLink}
      class="lp-cta-button inline-flex items-center gap-2 text-lg sm:text-xl font-bold px-10 py-5 rounded-full shadow-xl transition-all duration-300 hover:scale-105"
    >
      {ctaText}
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    </a>
  </div>

  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 scroll-indicator text-white/60 text-sm tracking-widest">
    SCROLL
  </div>
</section>
