---
interface Props {
  title: string;
  description: string;
  ctaText: string;
  ctaLink: string;
  subCtaText?: string;
  subCtaLink?: string;
}

const { title, description, ctaText, ctaLink, subCtaText, subCtaLink } = Astro.props;
---

<section data-testid="lp-final-cta" class="relative py-20 md:py-32 overflow-hidden">
  <div class="absolute inset-0 hero-gradient"></div>
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <div class="absolute top-1/3 left-1/5 w-80 h-80 bg-accent-500/8 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/5 w-64 h-64 bg-glow/10 rounded-full blur-3xl"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6 animate-on-scroll">
      {title}
    </h2>
    <p class="text-lg md:text-xl text-primary-200 mb-10 max-w-2xl mx-auto leading-relaxed animate-on-scroll">
      {description}
    </p>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-on-scroll">
      <a
        href={ctaLink}
        class="lp-cta-button inline-flex items-center gap-2 text-lg sm:text-xl font-bold px-10 py-5 rounded-full shadow-xl transition-all duration-300 hover:scale-105"
      >
        {ctaText}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
      {subCtaText && subCtaLink && (
        <a
          href={subCtaLink}
          class="inline-flex items-center gap-2 text-white/80 hover:text-white font-medium px-6 py-3 border border-white/30 rounded-full hover:border-white/60 transition-all duration-300"
        >
          {subCtaText}
        </a>
      )}
    </div>
  </div>
</section>
