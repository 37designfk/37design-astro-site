---
interface Props {
  title: string;
  message: string;
  authorName: string;
  authorRole: string;
}

const { title, message, authorName, authorRole } = Astro.props;
---

<section data-testid="lp-empathy" class="py-16 md:py-24 bg-surface-alt">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-text-primary text-center mb-10 animate-on-scroll">
      {title}
    </h2>
    <div class="animate-on-scroll bg-white rounded-3xl shadow-lg p-8 md:p-12 relative">
      <div class="absolute -top-4 left-8 text-6xl text-accent-500 opacity-40 font-serif leading-none" aria-hidden="true">
        &ldquo;
      </div>
      <p class="text-lg md:text-xl text-text-body leading-loose whitespace-pre-line relative z-10">
        {message}
      </p>
      <div class="mt-8 flex items-center gap-4 border-t border-border pt-6">
        <div class="w-12 h-12 bg-primary-900 rounded-full flex items-center justify-center text-white font-bold text-lg">
          {authorName.charAt(0)}
        </div>
        <div>
          <p class="font-bold text-text-primary">{authorName}</p>
          <p class="text-sm text-text-secondary">{authorRole}</p>
        </div>
      </div>
    </div>
  </div>
</section>
