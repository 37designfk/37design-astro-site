---
interface Solution {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  title: string;
  solutions: Solution[];
}

const { title, solutions } = Astro.props;
---

<section data-testid="lp-solution" class="py-16 md:py-24 bg-surface">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-text-primary text-center mb-4 animate-on-scroll">
      {title}
    </h2>
    <div class="w-16 h-1 bg-accent-500 mx-auto rounded mb-12"></div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {solutions.map((solution, i) => (
        <div
          class="animate-on-scroll bg-white rounded-2xl shadow-md border border-border p-8 card-hover relative overflow-hidden group"
          style={`animation-delay: ${i * 120}ms`}
        >
          <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-accent-500 to-glow scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
          <div class="w-14 h-14 bg-primary-50 rounded-xl flex items-center justify-center text-3xl mb-5" aria-hidden="true">
            {solution.icon}
          </div>
          <h3 class="text-xl font-bold text-text-primary mb-3">{solution.title}</h3>
          <p class="text-text-body leading-relaxed">{solution.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
