---
interface Problem {
  icon: string;
  text: string;
}

interface Props {
  title: string;
  problems: Problem[];
}

const { title, problems } = Astro.props;
---

<section data-testid="lp-problem" class="py-16 md:py-24 bg-surface">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-text-primary text-center mb-12 animate-on-scroll">
      {title}
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {problems.map((problem, i) => (
        <div
          class="animate-on-scroll relative bg-red-50 border border-red-200 rounded-2xl p-6 flex items-start gap-4 card-hover"
          style={`animation-delay: ${i * 100}ms`}
        >
          <div class="flex-shrink-0 w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center text-2xl" aria-hidden="true">
            {problem.icon}
          </div>
          <p class="text-lg text-text-body leading-relaxed">{problem.text}</p>
        </div>
      ))}
    </div>
  </div>
</section>
