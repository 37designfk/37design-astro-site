---
const services = [
  {
    icon: "M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.431.992a7.723 7.723 0 0 1 0 .255c-.007.378.138.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 0 1 0-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28ZM15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z",
    title: "業務の自動化",
    subtitle: "Automation",
    description: "日報、請求書、在庫管理——毎日の繰り返し作業をAIと自動化ツールで効率化。人がやるべき仕事に集中できる環境を構築します。",
    gradient: "from-blue-500 to-cyan-400",
  },
  {
    icon: "M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z",
    title: "営業・顧客管理最適化",
    subtitle: "CRM Optimization",
    description: "散らばった顧客情報を一元管理。見込み客のフォローアップからリピート施策まで、売上につながる仕組みを構築します。",
    gradient: "from-violet-500 to-purple-400",
  },
  {
    icon: "M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z",
    title: "AI構築フルパッケージ",
    subtitle: "Full AI Package",
    description: "業務分析からAIツールの選定・導入・研修まで、ワンストップで対応。1週間であなたの会社をAI企業へ変革します。",
    gradient: "from-amber-400 to-orange-400",
  },
];
import WaveDivider from "./WaveDivider.astro";
---

<section id="services" class="relative py-16 md:py-20 lg:py-24 bg-surface-alt">
  <div class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8">
    <div class="text-center mb-12 md:mb-16 animate-on-scroll">
      <p class="text-primary-500 text-sm font-semibold tracking-[.2em] uppercase mb-3">Services</p>
      <h2 class="text-2xl md:text-3xl font-bold text-text-primary">
        <span class="marker-highlight">属人化</span>した業務を、テクノロジーで解決する
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
      {services.map((service, i) => (
        <div
          class="animate-on-scroll group relative card-hover rounded-2xl bg-white border border-border overflow-hidden"
          style={`animation-delay: ${i * 0.12}s`}
        >
          <!-- Gradient accent line -->
          <div class={`h-1 bg-gradient-to-r ${service.gradient}`}></div>

          <!-- Service image -->
          <div class="h-40 relative overflow-hidden bg-white">
            {i === 0 && (
              <img
                src="/images/service-automation.png"
                alt="業務自動化 - ワークフロー最適化とプロセス自動化"
                class="w-full h-full object-cover"
                loading="lazy"
              />
            )}
            {i === 1 && (
              <img
                src="/images/service-crm.jpg"
                alt="営業・顧客管理最適化 - CRMシステムとデータ一元管理"
                class="w-full h-full object-cover"
                loading="lazy"
              />
            )}
            {i === 2 && (
              <img
                src="/images/service-ai.jpg"
                alt="AI構築フルパッケージ - AIイノベーションサービスと未来加速"
                class="w-full h-full object-cover"
                loading="lazy"
              />
            )}
            {i !== 0 && i !== 1 && i !== 2 && (
              <div class={`h-40 bg-gradient-to-br ${service.gradient} opacity-10 flex items-center justify-center relative overflow-hidden`}>
                <div class={`absolute inset-0 bg-gradient-to-br ${service.gradient} opacity-20`}></div>
                <div class="relative text-center text-text-muted/50">
                  <svg class="w-12 h-12 mx-auto mb-1 opacity-40" fill="none" stroke="currentColor" stroke-width="1" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909M3.75 21h16.5A2.25 2.25 0 0 0 22.5 18.75V5.25A2.25 2.25 0 0 0 20.25 3H3.75A2.25 2.25 0 0 0 1.5 5.25v13.5A2.25 2.25 0 0 0 3.75 21Z" />
                  </svg>
                  <p class="text-xs">サービスイメージ</p>
                </div>
              </div>
            )}
          </div>

          <div class="p-7 md:p-8">
            <div class="w-12 h-12 rounded-xl bg-primary-950 flex items-center justify-center mb-5 group-hover:bg-accent-400 transition-all duration-300 group-hover:scale-110 -mt-12 relative z-10 shadow-lg">
              <svg class="w-6 h-6 text-white group-hover:text-primary-950 transition-colors" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d={service.icon} />
              </svg>
            </div>
            <p class="text-xs font-semibold text-primary-400 tracking-wider uppercase mb-1">{service.subtitle}</p>
            <h3 class="text-xl font-bold text-text-primary mb-3">{service.title}</h3>
            <p class="text-sm text-text-secondary leading-relaxed">{service.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
  <WaveDivider color1="#ffffff" />
</section>
