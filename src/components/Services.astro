---

<section id="services" class="relative py-16 md:py-20 lg:py-24 bg-surface-alt">
  <div class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8">
    <div class="text-center mb-12 md:mb-16 animate-on-scroll">
      <p class="text-primary-500 text-sm font-semibold tracking-[.2em] uppercase mb-3">Services</p>
      <h2 class="text-2xl md:text-3xl font-bold text-text-primary">
        <span class="marker-highlight">属人化</span>した業務を、テクノロジーで解決する
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {services.map((service, i) => (
        <a
          href={service.href}
          class="animate-on-scroll group relative card-hover rounded-2xl bg-white border border-border overflow-hidden block"
          style={`animation-delay: ${i * 0.12}s`}
        >
          {/* NEW badge */}
          {service.isNew && (
            <div class="absolute top-3 right-3 z-20 bg-red-500 text-white text-[10px] font-bold px-2.5 py-1 rounded-full tracking-wider shadow-lg">NEW</div>
          )}

          {/* Gradient accent line */}
          <div class={`h-1 bg-gradient-to-r ${service.gradient}`}></div>

          {/* Service image */}
          <div class="h-36 relative overflow-hidden bg-white">
            {i === 0 && (
              <img
                src="/images/service-automation.png"
                alt="業務自動化 - ワークフロー最適化とプロセス自動化"
                class="w-full h-full object-cover"
                loading="lazy"
                decoding="async"
                width="3168"
                height="1344"
              />
            )}
            {i === 1 && (
              <img
                src="/images/service-crm.jpg"
                alt="営業・顧客管理最適化 - CRMシステムとデータ一元管理"
                class="w-full h-full object-cover"
                loading="lazy"
                decoding="async"
                width="1024"
                height="559"
              />
            )}
            {i === 2 && (
              <img
                src="/images/service-ai.jpg"
                alt="AI構築フルパッケージ - AIイノベーションサービスと未来加速"
                class="w-full h-full object-cover"
                loading="lazy"
                decoding="async"
                width="1024"
                height="559"
              />
            )}
            {i === 3 && (
              <div class={`h-36 bg-gradient-to-br ${service.gradient} flex items-center justify-center relative overflow-hidden`}>
                <div class={`absolute inset-0 bg-gradient-to-br ${service.gradient} opacity-20`}></div>
                <div class="relative">
                  <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d={service.icon} />
                  </svg>
                </div>
              </div>
            )}
          </div>

          <div class="p-6">
            <div class="w-10 h-10 rounded-xl bg-primary-950 flex items-center justify-center mb-4 group-hover:bg-accent-400 transition-all duration-300 group-hover:scale-110 -mt-11 relative z-10 shadow-lg">
              <svg class="w-5 h-5 text-white group-hover:text-primary-950 transition-colors" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d={service.icon} />
              </svg>
            </div>
            <p class="text-[10px] font-semibold text-primary-400 tracking-wider uppercase mb-1">{service.subtitle}</p>
            <h3 class="text-lg font-bold text-text-primary mb-2">{service.title}</h3>
            <p class="text-xs text-text-secondary leading-relaxed mb-4">{service.description}</p>

