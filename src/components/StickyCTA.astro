<script>
  const stickyCta = document.getElementById("sticky-cta");
  if (stickyCta) {
    let shown = false;
    const onScroll = () => {
      const shouldShow = window.scrollY > 600;
      if (shouldShow !== shown) {
        shown = shouldShow;
        stickyCta.classList.toggle("is-visible", shown);
      }
    };
    window.addEventListener("scroll", onScroll, { passive: true });
  }
</script>
