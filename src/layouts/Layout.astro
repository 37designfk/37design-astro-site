        },
        {
          "@type": "LocalBusiness",
          "@id": "https://37design.co.jp/#headquarters",
          "name": "株式会社37Design 本社",
          "parentOrganization": { "@id": "https://37design.co.jp/#organization" },
          "url": "https://37design.co.jp",
