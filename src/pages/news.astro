---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const newsItems = [
  {
    date: "2026.02.06",
    category: "お知らせ",
    title: "Webサイトをリニューアルしました",
    description: "より見やすく、使いやすいサイトへと全面リニューアルいたしました。"
  },
  {
    date: "2026.01.15",
    category: "サービス",
    title: "業務自動化スターターパックの提供を開始しました",
    description: "中小企業向けの業務自動化パッケージの提供を開始いたしました。"
  },
  {
    date: "2025.12.01",
    category: "サービス",
    title: "AI導入支援サービスを拡充しました",
    description: "ChatGPT/Claude活用支援、社内AIチャットボット構築など、AI関連サービスを大幅に拡充いたしました。"
  },
  {
    date: "2025.10.15",
    category: "お知らせ",
    title: "LexionHub Autopoiesisをリリースしました",
    description: "企業が自ら成長し続けるAIエコシステムを構築するサービスをリリースいたしました。"
  },
  {
    date: "2025.09.01",
    category: "お知らせ",
    title: "東京営業所を開設しました",
    description: "東京都中央区銀座に東京営業所を開設いたしました。"
  },
];
---

<Layout
  title="お知らせ | 株式会社37Design"
  description="株式会社37Designのお知らせ・ニュース一覧。新サービスのリリース情報や会社の最新情報をお届けします。"
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[40vh] flex items-center hero-gradient overflow-hidden">
      <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
        <div class="particle" style="left:10%; animation-duration:8s; animation-delay:0s;"></div>
        <div class="particle" style="left:30%; animation-duration:12s; animation-delay:2s; width:6px; height:6px;"></div>
        <div class="particle" style="left:60%; animation-duration:10s; animation-delay:4s;"></div>
        <div class="particle" style="left:85%; animation-duration:14s; animation-delay:1s; width:3px; height:3px;"></div>
      </div>

      <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
        <div class="absolute top-[20%] right-[15%] w-72 h-72 bg-glow/8 rounded-full blur-[100px] hero-float"></div>
        <div class="absolute bottom-[10%] left-[10%] w-96 h-96 bg-accent-400/5 rounded-full blur-[120px] hero-float-delay"></div>
      </div>

      <div class="relative z-20 max-w-5xl mx-auto px-4 md:px-6 lg:px-8 py-20 md:py-24 w-full text-center">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-white/10 border border-white/10 backdrop-blur-sm mb-6">
          <span class="text-white/70 text-xs font-medium">News</span>
        </div>

        <h1 class="text-[clamp(2rem,5vw,3.5rem)] font-black text-white leading-[1.15] mb-4">
          お知らせ
        </h1>

        <p class="text-white/70 text-base md:text-lg leading-relaxed max-w-2xl mx-auto">
          株式会社37Designの最新情報をお届けします
        </p>
      </div>
    </section>

    <!-- News List -->
    <section class="py-16 md:py-20 bg-surface">
      <div class="max-w-4xl mx-auto px-4 md:px-6 lg:px-8">
        <div class="space-y-4">
          {newsItems.map((item, i) => (
            <article class="bg-white rounded-xl p-6 md:p-8 border border-border hover:border-accent-400/40 hover:shadow-lg transition-all">
              <div class="flex flex-col md:flex-row md:items-center gap-4 mb-3">
                <time class="text-sm font-semibold text-text-muted shrink-0">{item.date}</time>
                <span class="inline-flex items-center px-3 py-1 rounded-full bg-primary-500/10 text-primary-600 text-xs font-semibold shrink-0 w-fit">
                  {item.category}
                </span>
              </div>
              <h2 class="text-xl font-bold text-text-primary mb-3">{item.title}</h2>
              <p class="text-text-secondary leading-relaxed">{item.description}</p>
            </article>
          ))}
        </div>

        <!-- Pagination (future) -->
        <!-- <div class="mt-12 flex justify-center">
          <div class="flex items-center gap-2">
            <button class="px-4 py-2 rounded-lg border border-border text-text-secondary hover:bg-surface transition-colors">前へ</button>
            <button class="px-4 py-2 rounded-lg bg-primary-600 text-white font-semibold">1</button>
            <button class="px-4 py-2 rounded-lg border border-border text-text-secondary hover:bg-surface transition-colors">2</button>
            <button class="px-4 py-2 rounded-lg border border-border text-text-secondary hover:bg-surface transition-colors">3</button>
            <button class="px-4 py-2 rounded-lg border border-border text-text-secondary hover:bg-surface transition-colors">次へ</button>
          </div>
        </div> -->
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 md:py-20 bg-primary-800 relative overflow-hidden">
      <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-glow/5 rounded-full blur-[120px]"></div>
        <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-accent-400/5 rounded-full blur-[100px]"></div>
      </div>

      <div class="relative max-w-4xl mx-auto px-4 md:px-6 lg:px-8 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
          サービスについてのお問い合わせ
        </h2>
        <p class="text-white/60 text-base md:text-lg mb-8">
          ご質問・ご相談はお気軽にどうぞ
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-accent-400 text-primary-950 font-bold rounded-full hover:bg-accent-300 transition-colors text-base"
          >
            お問い合わせ
          </a>
          <a
            href="/service"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/10 text-white font-semibold rounded-full hover:bg-white/15 transition-colors text-base border border-white/20"
          >
            サービス一覧を見る
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
