      function timeAgo(dateString) {
        if (!dateString) return '-';
        const now = new Date();
        const date = new Date(dateString);
        const diffMs = now - date;
        const diffSec = Math.floor(diffMs / 1000);
        const diffMin = Math.floor(diffSec / 60);
        const diffHour = Math.floor(diffMin / 60);
        const diffDay = Math.floor(diffHour / 24);

        if (diffSec < 60) return 'ãŸã£ãŸä»Š';
        if (diffMin < 60) return `${diffMin}åˆ†å‰`;
        if (diffHour < 24) return `${diffHour}æ™‚é–“å‰`;
        if (diffDay < 30) return `${diffDay}æ—¥å‰`;
        return date.toLocaleDateString('ja-JP');
      }

      function formatDuration(seconds) {
        if (!seconds && seconds !== 0) return '-';
        if (seconds < 60) return `${seconds}ç§’`;
        const min = Math.floor(seconds / 60);
        const sec = seconds % 60;
        if (min < 60) return `${min}åˆ†${sec > 0 ? sec + 'ç§’' : ''}`;
        const hr = Math.floor(min / 60);
        const remainMin = min % 60;
        return `${hr}æ™‚é–“${remainMin > 0 ? remainMin + 'åˆ†' : ''}`;
      }

