  },
];

const comparisons = [
  { label: "1:1 定例ミーティング", online: false, dedicated: true },
  { label: "チャットでの個別質問", online: false, dedicated: true },
  { label: "AI質問 → 動画回答", online: true, dedicated: true },
  { label: "オンラインセミナー", online: true, dedicated: false },
  { label: "セミナーアーカイブ見放題", online: true, dedicated: false },
  { label: "会員限定コミュニティ", online: true, dedicated: false },
  { label: "ツール導入サポート", online: false, dedicated: true },
  { label: "社員向けAI研修", online: false, dedicated: true },
];
---

<Layout
  title="オンラインAI顧問 | 株式会社37Design"
  description="月額29,800円でAI顧問がつく。不定期セミナー・動画Q&A・コミュニティで、あなたの会社のAI活用を加速させます。"
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[90vh] flex items-center hero-gradient overflow-hidden">
      <ParticleCanvas />

      <div class="absolute inset-0 pointer-events-none z-[2]" aria-hidden="true">
        <div class="absolute top-[20%] right-[15%] w-72 h-72 bg-glow/8 rounded-full blur-[100px] hero-float"></div>
        <div class="absolute bottom-[10%] left-[10%] w-96 h-96 bg-accent-400/5 rounded-full blur-[120px] hero-float-delay"></div>
      </div>

      <div class="relative z-20 max-w-5xl mx-auto px-4 md:px-6 lg:px-8 py-20 md:py-28 w-full text-center">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-white/10 border border-white/10 backdrop-blur-sm mb-6">
          <span class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></span>
          <span class="text-white/70 text-xs font-medium">新サービス - メンバー募集中</span>
        </div>

        <h1 class="text-[clamp(2rem,5vw,3.5rem)] font-black text-white leading-[1.15] mb-6">
          月額<span class="text-accent-400">29,800</span>円で<br />
          AI顧問がつく
        </h1>

        <p class="text-white/70 text-base md:text-lg leading-relaxed max-w-2xl mx-auto mb-4">
          セミナー・動画Q&A・コミュニティで<br class="hidden md:block" />
          あなたの会社のAI活用を加速させる、<strong class="text-white/90">1:Nのオンライン顧問サービス</strong>
        </p>

        <p class="text-accent-400/80 text-sm font-medium mb-8">
          年払い 298,000円（2ヶ月分お得）
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#contact"
            class="btn-pulse inline-flex items-center justify-center gap-2 px-8 py-4 bg-accent-400 text-primary-950 font-bold rounded-full hover:bg-accent-300 transition-colors text-base"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09Z" />
            </svg>
            今すぐ参加する
          </a>
          <a
            href="#features"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/10 text-white font-semibold rounded-full hover:bg-white/20 transition-colors text-base border border-white/20"
          >
            サービス内容を見る
          </a>
        </div>

        <!-- Trust indicators -->
        <div class="flex flex-wrap items-center justify-center gap-x-6 gap-y-2 mt-8 text-white/50 text-xs">
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-accent-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5l4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
            </svg>
            <span>セミナー<strong class="text-white/70">月1〜2回</strong></span>
          </div>
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-accent-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 12a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H8.25m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H12m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 0 1-2.555-.337A5.972 5.972 0 0 1 5.41 20.97a5.969 5.969 0 0 1-.474-.065 4.48 4.48 0 0 0 .978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25Z" />
            </svg>
            <span>動画Q&A<strong class="text-white/70">月3回</strong></span>
          </div>
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-accent-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
            </svg>
            <span><strong class="text-white/70">いつでも解約OK</strong></span>
          </div>
        </div>
      </div>
    </section>

    <!-- Who is this for -->
    <section class="py-16 md:py-20 bg-surface">
      <div class="max-w-4xl mx-auto px-4 md:px-6 lg:px-8">
        <div class="text-center mb-12">
          <p class="text-amber-600 text-sm font-semibold tracking-[.2em] uppercase mb-3">For You</p>
          <h2 class="text-2xl md:text-3xl font-bold text-text-primary">こんな方におすすめ</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="flex items-start gap-3 p-5 bg-amber-50 rounded-xl border border-amber-100">
            <svg class="w-5 h-5 text-amber-500 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-sm text-text-primary leading-relaxed">AIに興味はあるが、まだ本格導入の予算はない</span>
          </div>
          <div class="flex items-start gap-3 p-5 bg-amber-50 rounded-xl border border-amber-100">
            <svg class="w-5 h-5 text-amber-500 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-sm text-text-primary leading-relaxed">気軽にAIの相談ができる相手がほしい</span>
          </div>
          <div class="flex items-start gap-3 p-5 bg-amber-50 rounded-xl border border-amber-100">
            <svg class="w-5 h-5 text-amber-500 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-sm text-text-primary leading-relaxed">最新のAI情報をキャッチアップしたい</span>
          </div>
          <div class="flex items-start gap-3 p-5 bg-amber-50 rounded-xl border border-amber-100">
            <svg class="w-5 h-5 text-amber-500 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-sm text-text-primary leading-relaxed">他社のAI活用事例を知りたい</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-16 md:py-20 bg-surface-alt">
      <div class="max-w-5xl mx-auto px-4 md:px-6 lg:px-8">
        <div class="text-center mb-12">
          <p class="text-amber-600 text-sm font-semibold tracking-[.2em] uppercase mb-3">What You Get</p>
          <h2 class="text-2xl md:text-3xl font-bold text-text-primary">月額29,800円に含まれるもの</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {features.map((feature) => (
            <div class="bg-white rounded-xl p-6 border border-border hover:border-amber-300/50 hover:shadow-lg transition-all duration-300">
              <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d={feature.icon} />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-text-primary mb-2">{feature.title}</h3>
              <p class="text-sm text-text-secondary leading-relaxed">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Pricing Section -->
    <section id="pricing" class="py-16 md:py-20 bg-surface">
      <div class="max-w-3xl mx-auto px-4 md:px-6 lg:px-8">
        <div class="text-center mb-12">
          <p class="text-amber-600 text-sm font-semibold tracking-[.2em] uppercase mb-3">Pricing</p>
          <h2 class="text-2xl md:text-3xl font-bold text-text-primary">シンプルなワンプラン</h2>
          <p class="text-text-secondary text-sm mt-3">必要なものはすべて含まれています</p>
        </div>

        <div class="relative bg-white rounded-2xl p-8 md:p-10 border-2 border-amber-400 shadow-xl max-w-lg mx-auto">
          <div class="absolute -top-3.5 left-1/2 -translate-x-1/2 px-4 py-1 bg-gradient-to-r from-amber-500 to-orange-600 text-white text-xs font-bold rounded-full whitespace-nowrap">
            オンラインAI顧問
          </div>

          <div class="text-center mb-8">
            <div class="mb-2">
              <span class="text-sm text-text-muted">月額</span>
            </div>
            <div class="flex items-baseline justify-center gap-1">
              <span class="text-5xl md:text-6xl font-black text-amber-600">29,800</span>
              <span class="text-lg font-bold text-amber-600">円</span>
            </div>
            <p class="text-xs text-text-muted mt-2">税込 32,780円</p>
          </div>

          <div class="bg-amber-50 rounded-xl p-4 mb-6 text-center">
            <p class="text-sm font-bold text-amber-700">年払い 298,000円</p>
            <p class="text-xs text-amber-600 mt-1">月あたり約24,800円 — 2ヶ月分お得！</p>
          </div>

          <ul class="flex flex-col gap-3 mb-8">
            <li class="flex items-start gap-2.5 text-sm">
              <svg class="w-5 h-5 text-amber-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-text-primary">不定期オンラインセミナー（月1〜2回）</span>
            </li>
            <li class="flex items-start gap-2.5 text-sm">
              <svg class="w-5 h-5 text-amber-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-text-primary">AI質問 → 動画で回答（月3回まで投稿可）</span>
            </li>
            <li class="flex items-start gap-2.5 text-sm">
              <svg class="w-5 h-5 text-amber-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-text-primary">セミナーアーカイブ見放題</span>
            </li>
            <li class="flex items-start gap-2.5 text-sm">
              <svg class="w-5 h-5 text-amber-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-text-primary">会員限定Slackコミュニティ</span>
            </li>
          </ul>

          <a
            href="#contact"
            class="w-full inline-flex items-center justify-center gap-2 py-4 bg-gradient-to-r from-amber-500 to-orange-600 text-white font-bold rounded-full hover:from-amber-600 hover:to-orange-700 transition-colors text-base"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09Z" />
            </svg>
            今すぐ参加する
          </a>

          <p class="text-xs text-text-muted text-center mt-4">いつでも解約OK・解約金なし</p>
        </div>
      </div>
    </section>

    <!-- Comparison Section -->
    <section class="py-16 md:py-20 bg-surface-alt">
      <div class="max-w-3xl mx-auto px-4 md:px-6 lg:px-8">
        <div class="text-center mb-12">
          <p class="text-amber-600 text-sm font-semibold tracking-[.2em] uppercase mb-3">Compare</p>
          <h2 class="text-2xl md:text-3xl font-bold text-text-primary">プランの比較</h2>
          <p class="text-text-secondary text-sm mt-3">目的に合ったプランをお選びください</p>
        </div>

        <div class="bg-white rounded-2xl border border-border overflow-hidden">
          <div class="grid grid-cols-3 bg-primary-950 text-white text-center">
            <div class="p-4"></div>
            <div class="p-4 border-l border-white/10">
              <p class="text-xs font-semibold text-white/60 mb-1">1:N</p>
              <p class="text-sm font-bold">オンライン顧問</p>
              <p class="text-accent-400 text-xs font-bold mt-1">月額29,800円</p>
            </div>
            <div class="p-4 border-l border-white/10">
              <p class="text-xs font-semibold text-white/60 mb-1">1:1</p>
              <p class="text-sm font-bold">専属AI顧問</p>
              <p class="text-accent-400 text-xs font-bold mt-1">月額10万円〜</p>
            </div>
          </div>

          {comparisons.map((item, i) => (
            <div class={`grid grid-cols-3 text-sm ${i % 2 === 0 ? 'bg-white' : 'bg-surface-alt'}`}>
              <div class="p-3 md:p-4 flex items-center text-text-primary text-xs md:text-sm">{item.label}</div>
              <div class="p-3 md:p-4 flex items-center justify-center border-l border-border">
                {item.online ? (
                  <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                ) : (
                  <svg class="w-5 h-5 text-neutral-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                  </svg>
                )}
              </div>
              <div class="p-3 md:p-4 flex items-center justify-center border-l border-border">
                {item.dedicated ? (
                  <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                ) : (
                  <svg class="w-5 h-5 text-neutral-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                  </svg>
                )}
              </div>
            </div>
          ))}
        </div>

        <div class="mt-8 text-center">
          <p class="text-sm text-text-secondary mb-4">
            まずはオンライン顧問で始めて、<br class="md:hidden" />本格導入したくなったら1:1プランへアップグレードも可能です。
          </p>
          <a href="/ai-consultant" class="inline-flex items-center gap-1.5 text-sm font-semibold text-amber-600 hover:text-amber-700 transition-colors">
            1:1 専属AI顧問プランを見る
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Advisor Profile -->
    <section class="py-16 md:py-20 bg-surface">
      <div class="max-w-3xl mx-auto px-4 md:px-6 lg:px-8">
        <div class="text-center mb-12">
          <p class="text-amber-600 text-sm font-semibold tracking-[.2em] uppercase mb-3">Your Advisor</p>
          <h2 class="text-2xl md:text-3xl font-bold text-text-primary">あなたのAI顧問</h2>
        </div>

        <div class="bg-white rounded-2xl p-6 md:p-8 border border-border shadow-lg">
          <div class="flex flex-col md:flex-row gap-6 items-center md:items-start">
            <div class="shrink-0">
              <img
                src="/images/ceo-photo.jpg"
                alt="古田 健"
                class="w-32 h-32 rounded-2xl object-cover border-2 border-amber-200"
                loading="lazy"
              />
            </div>
            <div class="text-center md:text-left">
              <h3 class="text-xl font-bold text-text-primary mb-1">古田 健<span class="text-sm font-normal text-text-muted ml-2">ふるた けん</span></h3>
